<%= render 'form', recipe: @recipe %>

<%= form_for @person do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |i| %>

  <%= i.label :ingredient_name_1 %>
  <%= i.text_field :ingredient_name_1 %><br>

  <%= i.label :quantity_1 %>
  <%= i.text_field :quantity_1 %><br>

  <%= i.label :ingredient_name_2 %>
  <%= i.text_field :ingredient_name_2 %><br>

  <%= i.label :quantity_2 %>
  <%= i.text_field :quantity_2 %><br>



  <% end %>
  <%= f.submit %>
<% end %>
